        <TextBlock HorizontalAlignment="Left" Margin="273,41,0,0" TextWrapping="Wrap" Text="Chassis Number" VerticalAlignment="Top"/>
        <Button x:ConnectionId='6' x:Name="Submit" Content="Submit Part" HorizontalAlignment="Left" Margin="35,177,0,0" VerticalAlignment="Top" Width="343"                     />
